{
   "compilerOptions": {
     "moduleResolution": "bundler",
     "target": "ESNext",
     "module": "ESNext",
     "isolatedModules": true,
     "resolveJsonModule": true,
     "sourceMap": true,
     "esModuleInterop": true,
     "skipLibCheck": true,
     "forceConsistentCasingInFileNames": true,
     "allowJs": true,
     "checkJs": true,
     "declaration": true
   },
   "include": ["src/**/*.js", "src/**/*.svelte"]
 }